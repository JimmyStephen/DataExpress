extends layout

block content
    body 
        div(class='registration-box center')
            form(id='regForm' class='registration-form' name='registration-form' action='/edit' method='post')
                p Please Enter Your current username:
                input(class='input' type='text' name='currentUsername' id='currentUsername' placeholder='Current Username' required)
                br
                input(class='input' type='text' name='username' id='username' placeholder='Username' required)
                br
                input(class='input' type='text' name='password' id='password' placeholder='Password' required)
                br
                input(class='input' type='text' name='email' id='email' placeholder='Email' required)
                br
                input(class='input' type='text' name='age' id='age' placeholder='age' required)
                

                //question 1
                label(for='Question1') Do you like me?: 
                select(name='q1')
                    option(value='yes.') yes.
                    option(value='yes!') yes!
                    option(value='Yes?!') Yes?!
                br
                //question 2
                label(for='Question2') Favorite Animal: 
                select(name='q2')
                    option(value='Leaches') Leaches
                    option(value='Wasps') Wasps
                    option(value='Mosquitoes') Mosquitoes
                br
                //question 3
                label(for='Question3') Which is the better fruit: 
                select(name='q3')
                    option(value='Oranges') Oranges
                    option(value='Apples') Apples
                    option(value='Lemons') Lemons
                br
                input(class='input' type='submit' value='submit' id="btn")