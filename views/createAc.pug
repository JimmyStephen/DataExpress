doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        div(class='registration-box center')
        form(id='regForm' class='registration-form' name='registration-form' action='/create' method='post')
                    //    username, password, email, age, and the answers to three multiple choice
            input(class='input' type='text' name='username' id='username', placeholder='Username' required)
            br
            input(class='input' type='text' name='password' id='password', placeholder='Password' required)
            br
            input(class='input' type='text' name='email' id='email', placeholder='Email' required)
            br
            input(class='input' type='text' name='age' id='age' placeholder='age' required)
            br

            //question 1
            label(for='Question1') Favorite Animal: 
            select(name='q1')
                option(value='A1') A1
                option(value='A2') A2
                option(value='A3') A3
                option(value='A4') A4
            br
            
            //question 2
            label(for='Question2') Favorite Animal: 
            select(name='q2')
                option(value='Fleas') Fleas
                option(value='Leaches') Leaches
                option(value='Wasps') Wasps
                option(value='Mosquitoes') Mosquitoes
            br
            
            label(for='Question3') Favorite N Word: 
            select(name='q3')
                option(value='Neumont') Neumont
                option(value='No') No
                option(value='Nigeria') Nigeria
                option(value='Nitrogen') Nitrogen
            br
            input(class='input' type='submit' value='submit')